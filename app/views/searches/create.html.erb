  Sorry, but there are no matches for your search!

<% else %>

<table>
  <tr>
    <th>Name</th>
      <th>City</th>
      <th>Skills</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.city %></td>
    
      
    <!-- @TODO: Show Profile without PW! -->
    <td><%= link_to 'Show Profile', user %></td>
  </tr>


<% end %>
<% end %>
</table>

