<table>
<caption>
<% if current_user.role.eql?("Administrator") || !params[:mode].eql?("my") %>
	Listing posts
<% else %>
	<%= current_user.name%>s posts
<% end %>
</caption>

  <tr>
    <th>Subject</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.subject %></td>
    <td><%= post.message %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

